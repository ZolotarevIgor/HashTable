<Window x:Class="Hash.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hash"
        mc:Ignorable="d"
        Title="Поиск" Height="190" Width="300">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label HorizontalAlignment="Left" Height="34" VerticalAlignment="Center" Margin="10,5,0,0" FontSize="20"  Grid.Row="0">Введите ключ:</Label>

            <TextBox Name="txtb" FontSize="18" Height="30" Margin="10,5" Focusable="True" KeyDown="txtb_KeyDown" Grid.Row="0" VerticalAlignment="Top"/>
        </StackPanel>

        <Button Content="Найти" HorizontalAlignment="Center" Height="34" VerticalAlignment="Center" Width="88" Click="Button_Click" Grid.Row="1"/>

    </Grid>
</Window>
